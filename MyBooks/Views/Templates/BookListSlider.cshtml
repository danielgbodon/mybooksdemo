@using Microsoft.Extensions.Localization
@using MyBooks.Controllers;

@inject IStringLocalizer<BookList> Localizer

<template id="bookListSlider">
    <li class="uk-nestable-item mb_book_list_slider"
        data-book-list-name="" data-book-list-color="" data-book-list-removable="" data-book-list-id="">
        <div class="uk-nestable-panel md-list-content md-color-white">
            <div class="md-list-content" style="margin-top: 2px;">
                <div id="actionsButtons">
                    <a id="btnDelete" onclick="deleteList(this);" class="md-list-action"><i class="md-icon material-icons md-color-white">delete</i></a>
                    <a id="btnEdit" onclick="editList(this);" class="md-list-action"><i class="md-icon material-icons md-color-white">edit</i></a>
                </div>

                <i class="uk-nestable-handle material-icons md-color-white" data-uk-tooltip="{pos:'right'}" title="@Localizer["ArrastraReordena"]">&#xE5D2;</i>
                <span id="listName"></span>
            </div>
        </div>
        <div class="uk-slidenav-position" data-uk-slider>

            <div class="uk-slider-container uk-margin-small-top" style="padding-bottom: 1rem;">
                <ul class="uk-slider uk-grid uk-grid-small uk-grid-width-medium-1-6 uk-grid-width-small-1-3" style="display: none;">
                </ul>
                <div id="emptyBookListContainer" style="display: none; text-align: center;">
                    <img class="uk-margin-small-top" src="~/img/owlreading-min.png" />
                    <h4 class="uk-text-muted uk-margin-small-top">@Localizer["NoLibrosEnLista"]</h4>
                </div>
            </div>

            <a href="#" class="uk-slidenav uk-slidenav-contrast uk-slidenav-previous" data-uk-slider-item="previous"></a>
            <a href="#" class="uk-slidenav uk-slidenav-contrast uk-slidenav-next" data-uk-slider-item="next"></a>

        </div>
    </li>
</template>

